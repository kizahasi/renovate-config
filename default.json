{
    "extends": [
        "config:base",
        ":timezone(Asia/Tokyo)",
        ":pinOnlyDevDependencies",
        "helpers:disableTypesNodeMajor",
        "schedule:weekly"
    ],
    "pin": {
        "automerge": true
    },
    "patch": {
        "automerge": true
    },
    "packageRules": [
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "automerge": true,
            "major": {
                "automerge": false
            }
        },
        {
            "matchPackagePatterns": [
                "^@types/"
            ],
            "automerge": true,
            "major": {
                "automerge": false
            }
        }
    ]
}